<!DOCTYPE html>
<html>
<!-- COMIENZO DEL HEAD -->

<%- include ("./partials/head") -%>

<!-- COMIENZO BODY -->
<body>
        <div class ="logowhatsapp">
            <img src="/img/whatsapp-logo.svg"  alt="Whatsapp" class ="logosredes"/>
        </div>

<%- include ("./partials/header") -%>


    <div class = "tituloregistro">
    <h2>Editar Producto</h2>
    </div>

    <form class = "listadoregistro" action="/marcas/update/ <%= Marca.marca_id  %>?_method=put" method="post">

    <div class = "cajaregistro">
        <div class = "camposregistro">


        <label for="marca_perfume">Marca perfume: </label>
        <input type="text" id="" name="marca_perfume" value="<%= Marca.marca_perfume %>" required><br>

    </div>        
    <div class = "camposregistro">
    
        <label for="nombre_perfume">Nombre perfume: </label>
        <input type="text" id="" name="nombre_perfume" value="<%= Marca.nombre_perfume %>" required><br>

    </div>        
    <div class = "camposregistro">
    
        <label for="tamaño">Tamaño: </label>
        <input type="text" id="" name="tamaño" value="<%= Marca.tamaño %>" required><br>

    </div>        
    <div class = "camposregistro">
    
        <label for="cant_vendida">Cant vendida: </label>
        <input type="number" id="" name="cant_vendida" value="<%= Marca.cant_vendida %>" required><br>

    </div>        
    <div class = "camposregistro">
    
        <label for="imagen_banner">Imagen banner: </label>
        <input type="file" id="" name="imagen_banner" value="<%= Marca.imagen_banner %>" required><br>

    </div>        
    <div class = "camposregistro">
    
        <label for="concentracion">Concentracion: </label>
        <input type="text" id="" name="concentracion" value="<%= Marca.concentracion %>" required><br>

    </div>        
    <div class = "camposregistro">
    
        <label for="familia_perfume">Familia perfume: </label>
        <input type="text" id="" name="familia_perfume" value="<%= Marca.familia_perfume %>" required><br>

    </div>        
    <div class = "camposregistro">
    
        <label for="precio">Precio: </label>
        <input type="number" id="" name="precio" value="<%= Marca.precio %>" required><br>

    </div>        
    <div class = "camposregistro">
    
        <label for="stock">Stock: </label>
        <input type="number" id="" name="stock" value="<%= Marca.stock %>" required><br>

    </div>        
    <div class = "camposregistro">
    
        <label style="margin-bottom:7px" for="oferta">Esta en Oferta: </label>
        <p><input type="radio" name="oferta" value="<%= Marca.oferta %>">Si</p><br>
        <p><input type="radio" name="oferta" value="<%= Marca.oferta %>">No</p><br>

    </div>        
    <div class = "camposregistro">
    
        <label for="imagen">Imagen: </label>
        <input type="file" id="" name="imagen" value="<%= Marca.imagen %>" required><br>

    </div>        
    <div class = "camposregistro">
    
        <label for="clave">Clave: </label>
        <input type="text" id="" name="clave" value="<%= Marca.clave %>" required><br>

    </div>        
    <div class = "camposregistro">
    
    
        <label for="id_categoria_perfume">Género</label>
    
        <select name="id_categoria_perfume" id="" required>
    
            <option value="">Seleccione el Género</option>
            <% allCategorias.forEach(categoria => { %>
            <option value="<%= categoria.id_categoria %>"> <%= categoria.cat_perfume %> </option>
           <% }) %>
    
        </select>

    </div> 
</div>

        <div class ="cajabotones">
            <div>
    
        <button type="submit">Modificar Producto</button>
    
        <a href="/marcas">Listado de Productos</a>

    </div>
</div>
        
    </form>
